<UserControl x:Class="WpfListViewCC.SpinControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfListViewCC"
             mc:Ignorable="d" >
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="12" MaxWidth="24"/>
            <ColumnDefinition MinWidth="24"   />
            <ColumnDefinition MinWidth="12" MaxWidth="24"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Click="Button_Click_Dw">
            <Button.Content>
                <Path Data="M 10 0 L 0 5 L 10 10 Z" Fill="Black"></Path>
            </Button.Content>
        </Button>
        <TextBox x:Name="textBox1" Grid.Column="1"  Text ="0" TextAlignment="Right" VerticalAlignment="Center" MinWidth="24" HorizontalAlignment="Stretch"></TextBox>
        <Button Grid.Column="2" Click="Button_Click_Up">
            <Button.Content>
                <Path Data="M 0 0 L 0 10 L 10 5 Z" Fill="Black"></Path>
            </Button.Content>
        </Button>

    </Grid>
</UserControl>
